# GEM Enterprise - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ================================
# CORE APPLICATION SETTINGS
# ================================
# Flask session secret - use a strong random string
SESSION_SECRET=your-super-secret-session-key-change-this

# Database configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/gem_enterprise

# Deployment target (aws, gcp, local)
DEPLOY_TARGET=local

# Base URL for your application
BASE_URL=https://your-domain.com

# Media server port (for Node.js media server)
MEDIA_SERVER_PORT=3001

# Frontend URL (Flask app URL)
FRONTEND_URL=http://localhost:5000

# ================================
# AI SERVICES API KEYS
# ================================
# OpenAI API Key (required for image generation, chat, GPT)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ElevenLabs API Key (required for text-to-speech)
# Get from: https://elevenlabs.io/speech-synthesis
ELEVENLABS_KEY=your-elevenlabs-api-key-here

# Replicate API Token (required for video generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# Alternative image generation service
IMAGE_KEY=your-image-service-api-key

# Alternative video generation service  
VIDEO_KEY=your-video-service-api-key

# ================================
# COMMUNICATION SERVICES
# ================================
# Twilio Credentials (required for voice calls and SMS)
# Get from: https://console.twilio.com/
TWILIO_SID=ACyour-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890

# Twilio webhook callback URL
TWILIO_CALLBACK_URL=https://your-domain.com/api/media/callback

# ================================
# CLOUD STORAGE - AWS
# ================================
# AWS Credentials (optional for S3 storage)
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=AKIA-your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_BUCKET_NAME=gem-enterprise-media-assets
AWS_REGION=us-east-1

# AWS CloudFront distribution (for CDN)
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ================================
# CLOUD STORAGE - GOOGLE CLOUD
# ================================
# Google Cloud Platform credentials (alternative to AWS)
GCP_PROJECT_ID=your-gcp-project-id
GCP_SA_KEY=path/to/service-account-key.json

# GCP Storage bucket
GCP_BUCKET_NAME=gem-enterprise-gcp-bucket

# GCP Cloud CDN
GCP_CDN_DOMAIN=your-gcp-cdn-domain.com

# ================================
# INTEGRATIONS & AUTOMATION
# ================================
# Slack integration (optional)
SLACK_OAUTH=xoxb-your-slack-bot-token

# Notion integration (optional)
NOTION_TOKEN=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# Zapier webhook (optional)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook

# Make.com webhook (optional)
MAKE_WEBHOOK_URL=https://hook.integromat.com/your-webhook

# ================================
# SECURITY & COMPLIANCE
# ================================
# JWT Secret for token signing
JWT_SECRET=your-jwt-secret-key

# API rate limiting
RATE_LIMIT_PER_MINUTE=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self,unsafe-inline,cdnjs.cloudflare.com
CSP_STYLE_SRC=self,unsafe-inline,fonts.googleapis.com
CSP_IMG_SRC=self,data:,blob:,*.amazonaws.com

# ================================
# MONITORING & LOGGING
# ================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Insights (Azure, optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ================================
# EMAIL SERVICES
# ================================
# SendGrid API Key (for transactional emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ================================
# FINANCIAL & LEGAL SERVICES
# ================================
# Stripe API Keys (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# DocuSign API (for digital signatures)
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_USER_ID=your-docusign-user-id

# ================================
# DEVELOPMENT & TESTING
# ================================
# Environment flag
NODE_ENV=production
FLASK_ENV=production

# Debug mode (set to false in production)
DEBUG=false

# Testing database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/gem_enterprise_test

# ================================
# ENTERPRISE FEATURES
# ================================
# Single Sign-On (SSO)
SSO_PROVIDER=auth0
SSO_CLIENT_ID=your-sso-client-id
SSO_CLIENT_SECRET=your-sso-client-secret
SSO_DOMAIN=your-tenant.auth0.com

# Active Directory (for enterprise auth)
AD_TENANT_ID=your-ad-tenant-id
AD_CLIENT_ID=your-ad-client-id
AD_CLIENT_SECRET=your-ad-client-secret

# ================================
# PERFORMANCE & SCALING
# ================================
# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Celery broker (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1

# CDN configuration
CDN_URL=https://cdn.your-domain.com

# File upload limits (in bytes)
MAX_FILE_SIZE=104857600

# ================================
# BACKUP & DISASTER RECOVERY
# ================================
# Backup storage location
BACKUP_BUCKET=gem-enterprise-backups
BACKUP_REGION=us-west-2

# Database backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ================================
# COMPLIANCE & AUDITING
# ================================
# Compliance mode (GDPR, HIPAA, SOC2)
COMPLIANCE_MODE=SOC2

# Audit log retention (days)
AUDIT_RETENTION_DAYS=2555

# Data encryption at rest
ENCRYPTION_KEY=your-32-character-encryption-key

# ================================
# NOTES FOR DEPLOYMENT
# ================================
# 1. Set DEPLOY_TARGET to 'aws' or 'gcp' for cloud deployments
# 2. Ensure all required API keys are obtained and configured
# 3. Use strong, unique passwords and keys for production
# 4. Enable HTTPS and proper SSL certificates
# 5. Configure firewalls and security groups appropriately
# 6. Set up monitoring and alerting
# 7. Implement proper backup strategies
# 8. Review and test disaster recovery procedures