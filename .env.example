
# GEM Enterprise AI Media Services Configuration
# Copy this file to .env and configure with your API keys and settings

# Core Application Settings
SESSION_SECRET=your_secure_session_secret_here
DATABASE_URL=sqlite:///gem_enterprise.db
FRONTEND_URL=http://localhost:5000
MEDIA_SERVER_PORT=3001
BASE_URL=https://your-domain.com

# OpenAI Configuration (Required for image generation and chat)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ElevenLabs Configuration (Required for high-quality TTS)
ELEVENLABS_KEY=your_elevenlabs_api_key_here

# Replicate Configuration (Required for video generation)
REPLICATE_API_TOKEN=r8_your_replicate_token_here

# Twilio Configuration (Required for voice calls)
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE=+1234567890
TWILIO_CALLBACK_URL=https://your-domain.com/api/media/call/webhook

# AWS Configuration (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=gem-enterprise-media
AWS_REGION=us-east-1

# Google Cloud Configuration (Optional - for additional services)
GCP_PROJECT_ID=your_gcp_project_id_here
GCP_SA_KEY=path_to_service_account_key.json

# Notion CMS Configuration (Optional - for content management)
NOTION_INTEGRATION_SECRET=secret_your_notion_integration_secret_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Deployment Configuration
DEPLOY_TARGET=replit
# Options: replit, aws, gcp, github_pages

# Integration Webhooks (Optional)
SLACK_OAUTH_TOKEN=xoxb-your_slack_bot_token_here
NOTION_TOKEN=secret_your_notion_token_here
MAKE_WEBHOOK_URL=https://hook.integromat.com/your_webhook_here

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_or_chat_id_here

# Security Settings
ALLOWED_ORIGINS=https://your-domain.com,http://localhost:5000
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=static/uploads

# Performance and Caching
CACHE_TIMEOUT=3600
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here

# AI Service Limits
MAX_IMAGE_SIZE=1792x1024
MAX_VIDEO_DURATION=10
MAX_TTS_LENGTH=2000
MAX_CHAT_HISTORY=20

# Feature Flags
ENABLE_VIDEO_GENERATION=true
ENABLE_VOICE_CALLS=true
ENABLE_S3_UPLOAD=true
ENABLE_CONTENT_MODERATION=true
